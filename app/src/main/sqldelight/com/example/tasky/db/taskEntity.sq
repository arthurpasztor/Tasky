getTaskById:
SELECT *
FROM taskEntity
WHERE id = :id;

getAllTasksForToday:
SELECT *
FROM taskEntity
WHERE timeDayFormatted = :dayFormatted;

getAllTasks:
SELECT *
FROM taskEntity;

insertOrReplaceTask:
INSERT OR REPLACE
INTO taskEntity
VALUES (?, ?, ?, ?, ?, ?, ?, ?);

deleteTaskById:
DELETE FROM taskEntity
WHERE id = :id;

deleteAll:
DELETE FROM taskEntity;
import kotlin.Boolean;

CREATE TABLE taskEntity (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    time INTEGER NOT NULL,
    remindAt INTEGER NOT NULL,
    isDone INTEGER AS Boolean NOT NULL
);

getTaskById:
SELECT *
FROM taskEntity
WHERE id = :id;

getAllTasks:
SELECT *
FROM taskEntity;

insertOrReplaceTask:
INSERT OR REPLACE
INTO taskEntity
VALUES (?, ?, ?, ?, ?, ?);

deleteTaskById:
DELETE FROM taskEntity
WHERE id = :id;